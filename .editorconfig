root = true
 
[*]
charset = utf-8
indent_style = tab
end_of_line = lf
tab_width = 2
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
quote_type = single
 
[*.md]
max_line_length = off
trim_trailing_whitespace = false
 
[*.{js,ts,tsx,json,css,scss,html,md}]
format_on_save = true